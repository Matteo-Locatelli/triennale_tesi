<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.stereoacuitymultitestapp"
    tools:ignore="GoogleAppIndexingWarning">
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> -->
    <uses-permission android:name="android.permission.READ_PROFILE" /> <!-- uses-permission android:name="android.permission.READ_CONTACTS" -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StereoAcuityMultiTestApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".NoRegPatientActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".PatientActivity"
            android:exported="false"
            android:label="@string/title_activity_patient" />
        <activity
            android:name=".CreatePatient"
            android:exported="false"
            android:label="@string/title_create_patient" />
        <activity
            android:name=".Settings"
            android:exported="false"
            android:label="@string/title_settings" />
        <activity
            android:name=".ChooseImageActivity"
            android:exported="false"
            android:label="@string/title_choose_image" />
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:label="@string/title_test_activity" />
        <activity
            android:name=".TestResultActivity"
            android:exported="false"
            android:label="@string/title_test_results" />
    </application>

</manifest>